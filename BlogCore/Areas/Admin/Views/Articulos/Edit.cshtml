@model BlogCore.Models.ViewModels.ArticuloVM

@{
    ViewData["Title"] = "Editar Articulo";
}

<br />
<br />

<h3 class="text-center">Editar Articulo</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <!--Se envia el ID del articulo como campo oculto-->
    <input type="hidden" asp-for="Articulo.Id" />

    <div class="row px-2 offset-0 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="col-8 offset-0 mt-4">

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label" for="Nombre" asp-for="Articulo.Nombre"></label>
                <div class="col-sm-9">
                    <input asp-for="Articulo.Nombre" class="form-control" id="Nombre" placeholder="Nombre del Articulo">
                    <span asp-validation-for="Articulo.Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label" for="Descripcion" asp-for="Articulo.Descripcion"></label>
                <div class="col-sm-9">
                    <textarea asp-for="Articulo.Descripcion" class="form-control" id="Descripcion" style="height:300px"></textarea>
                    <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label" for="CategoriaId">Categoria</label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(m => m.Articulo.CategoriaId, Model.ListaCategorias, "-Por favor seleccione una categoria-",
                    new {@class = "form-control", @id = "CategoriaId"})
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label" for="subidaArchivo" asp-for="Articulo.UrlImagen"></label>
                <div class="col-sm-9">
                    <input type="file" name="archivos" class="form-control" id="subidaArchivo" />
                </div>
            </div>

            <div class="row align-items-center mb-3">
                <button type="submit" class="btn btn-primary form-control mb-3" asp-route-id="@Model.Articulo.Id">Actualizar</button>
                <a asp-action="Index" class="btn btn-success form-control">Volver a Lista</a>
            </div>

        </div>

        <div class="col-4 mt-4">
            <img src="@Model.Articulo.UrlImagen" style="border-radius:5px; border:1px solid #bbb9b9; width:100%"/>
        </div>

    </div>
</form>

@section Scripts{
    <script src="https://cdn.tiny.cloud/1/qukxrn62f4bz0iv6z7enaelkkzuzugir28y709xit9xm659s/tinymce/5/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        })
    </script>
}
